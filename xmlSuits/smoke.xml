<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Smoke" parallel="tests" thread-count="4" data-provider-thread-count="4">
    <groups>
        <run>
            <include name="smoke"/>
        </run>
    </groups>

    <test name="Smoke Test Run on Chrome" verbose="10">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.opencarttest.test.NavigationTest"/>
            <class name="com.opencarttest.test.ProductPageTest"/>
        </classes>
    </test>

    <test name="Smoke Test Run on FireFox" verbose="10">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.opencarttest.test.NavigationTest"/>
            <class name="com.opencarttest.test.ProductPageTest"/>
        </classes>
    </test>
</suite>